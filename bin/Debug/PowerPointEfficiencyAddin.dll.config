<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
	</startup>

	<!-- ライセンス設定セクション -->
	<appSettings>
		<!-- ライセンスモード設定 -->
		<!-- Development: 開発モード（全機能有効、認証スキップ） -->
		<add key="DevelopmentMode" value="true" />
		<!-- Production: 本番モード（実際の認証を実行） -->
		<add key="LicenseMode" value="Development" />

		<!-- APIエンドポイント設定 -->
		<add key="LicenseApiUrl" value="https://api.yourcompany.com" />
		<add key="LicenseApiTimeout" value="30" />
		<add key="LicenseApiRetryCount" value="3" />

		<!-- オフライン猶予期間設定（日数） -->
		<add key="OfflineGracePeriodFull" value="3" />
		<add key="OfflineGracePeriodLimited" value="7" />

		<!-- ライセンス検証間隔（時間） -->
		<add key="ValidationIntervalHours" value="24" />

		<!-- ログ設定 -->
		<add key="EnableDetailedLogging" value="false" />

		<!-- 機能制限設定 -->
		<add key="LimitedModeMaxObjects" value="10" />

		<!-- プロキシ設定（必要な場合） -->
		<add key="UseSystemProxy" value="true" />
		<add key="ProxyAddress" value="" />
		<add key="ProxyPort" value="" />
	</appSettings>

	<!-- System.Configuration 参照を追加する必要があります -->
	<system.diagnostics>
		<trace autoflush="true" indentsize="4">
			<listeners>
				<add name="configConsoleListener" type="System.Diagnostics.ConsoleTraceListener" />
			</listeners>
		</trace>
	</system.diagnostics>
</configuration>